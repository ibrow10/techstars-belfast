---
import BaseLayout from '../layouts/BaseLayout.astro';

const tracks = [
    {
        icon: 'users',
        name: 'COMMUNITY',
        subtitle: 'Always-on',
        description: "You don't build alone. And you shouldn't have to. This is where you meet other founders, compare notes, and realise you're not the only one finding it hard.",
        detail: "You'll get rooms, sessions, and a steady cadence that keeps you moving."
    },
    {
        icon: 'code',
        name: 'BUILD',
        subtitle: 'Sprints + Hackathons',
        description: "Time-boxed. Practical. Slightly intense. You'll compress weeks into days and ship something real.",
        detail: "This is for founders who learn by doing. And who want momentum now."
    },
    {
        icon: 'rocket',
        name: 'GET READY',
        subtitle: 'Pre-accelerator',
        description: "If you're serious about going full-time, validating the problem, and becoming fundable — this is the track. Structure, accountability, and founder confidence.",
        detail: "Not theory. Not slides. Real progress."
    }
];

const whoItsFor = [
    "you're early and need direction",
    "you're building and need speed",
    "you're isolated and need peers",
    "you want to raise eventually — and want to do it properly"
];
---

<BaseLayout title="Programme">
    <!-- Page Header -->
    <section class="page-header">
        <div class="container">
            <h1>PROGRAMME</h1>
            <div class="page-intro">
                <p>Some founders need a community.<br>Some need a deadline.<br>Some need a push.<br>Most need all three.</p>
                <br>
                <p>We run a stack of programmes that meet you where you are — and help you move.</p>
            </div>
        </div>
    </section>

    <!-- Programme Tracks -->
    <section class="tracks-section">
        <div class="container">
            <div class="tracks-grid">
                {tracks.map(track => (
                    <div class="track-card card">
                        <div class="track-icon">
                            <i data-lucide={track.icon}></i>
                        </div>
                        <div class="track-header">
                            <h3>{track.name}</h3>
                            <span class="track-subtitle">{track.subtitle}</span>
                        </div>
                        <p class="track-description">{track.description}</p>
                        <p class="track-detail">{track.detail}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- In Plain English -->
    <section class="plain-english-section">
        <div class="container">
            <div class="plain-english-block">
                <h2>IN PLAIN ENGLISH</h2>
                <p>Techstars Belfast is a launchpad.<br>Not a fluffy accelerator. Not a co-working brochure.</p>
                <p>A place to build momentum — and connect into the wider Techstars world — without giving up equity.</p>
            </div>
        </div>
    </section>

    <!-- Who It's For -->
    <section class="who-section">
        <div class="container">
            <h2>THIS IS FOR YOU IF:</h2>
            <ul class="who-list">
                {whoItsFor.map(item => (
                    <li>{item}</li>
                ))}
            </ul>
        </div>
    </section>

    <!-- Page CTA -->
    <section class="page-cta-section">
        <div class="container">
            <div class="page-cta-block">
                <h2>NOT SURE WHERE TO START?</h2>
                <p>Come to an event. Join a sprint. Or get the weekly email and pick your moment.</p>
                <div class="cta-buttons">
                    <a href="/events" class="btn">View events</a>
                    <a href="/sprints" class="btn btn--outline">Join a sprint</a>
                    <a href="#newsletter" class="btn btn--outline">Get the weekly email</a>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    /* PAGE HEADER */
    .page-header {
        padding-top: 140px;
        padding-bottom: 3rem;
        border-bottom: 1px solid var(--border-color);
    }

    .page-header .container {
        max-width: 1000px;
    }

    .page-header h1 {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        margin-bottom: 1.5rem;
    }

    .page-intro {
        font-size: 1.1rem;
        max-width: 600px;
        color: #ccc;
        border-left: 2px solid var(--accent-color);
        padding-left: 1.5rem;
    }

    .page-intro p {
        max-width: none;
    }

    /* TRACKS SECTION */
    .tracks-section {
        padding: 4rem 0;
        border-bottom: 1px solid var(--border-color);
    }

    .tracks-section .container {
        max-width: 1000px;
    }

    .tracks-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .track-card {
        padding: 2rem;
    }

    .track-icon {
        color: var(--accent-color);
        margin-bottom: 1rem;
    }

    .track-header {
        margin-bottom: 1rem;
    }

    .track-header h3 {
        font-size: 1.3rem;
        font-family: var(--font-mono);
        margin-bottom: 0.25rem;
    }

    .track-subtitle {
        font-family: var(--font-mono);
        font-size: 0.8rem;
        color: var(--accent-color);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .track-description {
        font-size: 1rem;
        color: #ccc;
        line-height: 1.6;
        margin-bottom: 1rem;
    }

    .track-detail {
        font-size: 0.95rem;
        color: #888;
        line-height: 1.5;
        font-style: italic;
    }

    /* PLAIN ENGLISH SECTION */
    .plain-english-section {
        padding: 4rem 0;
        border-bottom: 1px solid var(--border-color);
    }

    .plain-english-section .container {
        max-width: 1000px;
    }

    .plain-english-block {
        background: #0a0a0a;
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 3rem;
        text-align: center;
    }

    .plain-english-block h2 {
        color: var(--accent-color);
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .plain-english-block p {
        font-size: 1.15rem;
        color: #ccc;
        line-height: 1.6;
        max-width: 600px;
        margin: 0 auto 1rem;
    }

    .plain-english-block p:last-child {
        margin-bottom: 0;
    }

    /* WHO SECTION */
    .who-section {
        padding: 4rem 0;
        border-bottom: 1px solid var(--border-color);
    }

    .who-section .container {
        max-width: 1000px;
    }

    .who-section h2 {
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .who-list {
        list-style: none;
        max-width: 500px;
    }

    .who-list li {
        font-size: 1.05rem;
        color: #ccc;
        margin-bottom: 0.75rem;
        padding-left: 1.5rem;
        position: relative;
    }

    .who-list li::before {
        content: "•";
        position: absolute;
        left: 0;
        color: var(--accent-color);
    }

    /* PAGE CTA SECTION */
    .page-cta-section {
        padding: 4rem 0;
    }

    .page-cta-section .container {
        max-width: 1000px;
    }

    .page-cta-block {
        text-align: center;
    }

    .page-cta-block h2 {
        font-size: 1.25rem;
        margin-bottom: 1rem;
    }

    .page-cta-block > p {
        font-size: 1.1rem;
        color: #aaa;
        margin-bottom: 2rem;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn--outline {
        background: transparent;
        color: var(--text-color);
    }

    .btn--outline:hover {
        background: var(--text-color);
        color: var(--bg-color);
    }

    /* RESPONSIVE */
    @media (max-width: 768px) {
        .page-header {
            padding-top: 120px;
        }

        .cta-buttons {
            flex-direction: column;
        }

        .cta-buttons .btn {
            width: 100%;
        }
    }
</style>
