---
import BaseLayout from '../layouts/BaseLayout.astro';

const whoCards = [
    {
        icon: 'lightbulb',
        title: 'First-time builders',
        description: "You're curious, you want to try building, you need a starting point."
    },
    {
        icon: 'rocket',
        title: 'Early founders',
        description: "You've started — now you need clarity, momentum, and a stronger network."
    },
    {
        icon: 'handshake',
        title: 'Operators & investors',
        description: "You want to meet serious founders early and help them win."
    }
];

const stackItems = [
    { title: 'Events & Founder Nights', description: 'Learn + meet peers' },
    { title: 'Build Sprints', description: 'Ship fast' },
    { title: 'Founder Catalyst', description: '10-week virtual pre-accelerator pathway' },
    { title: 'Community Development Lab', description: 'Founder-led ecosystem action, not talk' },
    { title: 'Founder Newsletter', description: 'Events. News. Trends. Local and international.' }
];
---

<BaseLayout title="Home">
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-video-container">
            <video class="hero-video" autoplay muted loop playsinline>
                <source src="/images/hero-techstars.mp4" type="video/mp4">
            </video>
            <div class="hero-overlay"></div>
        </div>

        <div class="container hero-content">
            <div class="hero-logo">
                <img src="/images/techstarsbelfastlogo.png" alt="Techstars Belfast">
            </div>
            
            <h1>BUILD FROM HERE.<br>SHIP TO EVERYWHERE.</h1>
            
            <p class="hero-tagline">Belfast's launchpad for ambitious founders. Global network. Local community. Founder-led.</p>

            <div class="hero-ctas">
                <a href="/events" class="btn">Upcoming Events</a>
                <a href="#newsletter" class="btn btn--outline">Subscribe to Newsletter</a>
            </div>
        </div>
    </section>

    <!-- What is this -->
    <section class="section what-section">
        <div class="container">
            <h2>WHAT IS TECHSTARS BELFAST?</h2>
            <div class="what-content">
                <p>Techstars Belfast is not a programme. It's a bet on the future. A partnership between Queen's University and Ormeau Labs, we're bringing the global Techstars network to Northern Ireland. Access to 10,000+ founders, mentors, and investors — starting from Belfast.</p>
            </div>
        </div>
    </section>

    <!-- Who it's for -->
    <section class="section who-section">
        <div class="container">
            <h2>WHO IT'S FOR</h2>
            <div class="who-grid">
                {whoCards.map(card => (
                    <div class="who-card">
                        <div class="who-icon">
                            <i data-lucide={card.icon}></i>
                        </div>
                        <h3>{card.title}</h3>
                        <p>{card.description}</p>
                    </div>
                ))}
            </div>
            <p class="who-microcopy">No gatekeeping. Just show up, build, and meet your people.</p>
        </div>
    </section>

    <!-- How it works -->
    <section class="section how-section">
        <div class="container">
            <h2>HOW IT WORKS</h2>
            <p class="how-intro">We're building a simple flywheel:</p>
            <div class="flywheel">
                <span class="flywheel-step">Interest</span>
                <span class="flywheel-arrow">→</span>
                <span class="flywheel-step">Participation</span>
                <span class="flywheel-arrow">→</span>
                <span class="flywheel-step">Capability</span>
                <span class="flywheel-arrow">→</span>
                <span class="flywheel-step">Company creation</span>
                <span class="flywheel-arrow">→</span>
                <span class="flywheel-step">Readiness</span>
                <span class="flywheel-arrow">→</span>
                <span class="flywheel-step">Network effects</span>
            </div>
            <p class="how-note">You can enter at any point — the important thing is momentum.</p>
        </div>
    </section>

    <!-- The Stack -->
    <section class="section stack-section">
        <div class="container">
            <h2>THE TECHSTARS BELFAST STACK</h2>
            <div class="stack-list">
                {stackItems.map(item => (
                    <div class="stack-item">
                        <span class="stack-title">{item.title}</span>
                        <span class="stack-desc">{item.description}</span>
                    </div>
                ))}
            </div>
            <div class="stack-ctas">
                <a href="/programmes" class="btn btn--outline">Explore Programme</a>
                <a href="/sprints" class="btn btn--outline">Explore Sprints</a>
                <a href="/events" class="btn btn--outline">View All Events</a>
            </div>
        </div>
    </section>

    <!-- AI-native -->
    <section class="section ai-section">
        <div class="container">
            <h2>AI-NATIVE BY DEFAULT</h2>
            <div class="ai-content">
                <p>AI has changed the speed of building, the shape of teams, and the rules of competition. Techstars Belfast is designed from the ground up with this new paradigm: more shipping, less theatre — and support that matches modern build velocity.</p>
            </div>
        </div>
    </section>

    <!-- Partners -->
    <section class="section partners-section">
        <div class="container">
            <h2>IN PARTNERSHIP WITH</h2>
            <div class="partners-content">
                <p>Techstars Belfast is delivered with Queen's University Belfast and Ormeau Labs. Queen's brings world-class research, talent and spinout potential — and a commitment to growing entrepreneurial ambition across students, postgraduates and researchers. Ormeau Labs anchors the initiative in the heart of the founder community. Together, we're building a practical, founder-first platform that connects Northern Ireland into the global Techstars network.</p>
            </div>
            <div class="partners-logos">
                <img src="/images/QUB-Logo.png" alt="Queen's University Belfast" class="partner-logo">
                <img src="/images/ormeau-labs-logo.svg" alt="Ormeau Labs" class="partner-logo">
            </div>
            <a href="/partners" class="btn">Partner with us</a>
        </div>
    </section>

    <!-- Newsletter -->
    <section id="newsletter" class="section newsletter-section">
        <div class="container">
            <div class="newsletter-block">
                <h2>GET THE WEEKLY FOUNDER SIGNAL</h2>
                <p>One email. No spam. Events, opportunities, and the best of what's happening across the NI founder community.</p>
                <a href="#newsletter" class="btn btn--accent">Subscribe</a>
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    /* HERO */
    .hero {
        position: relative;
        min-height: 90vh;
        display: flex;
        align-items: center;
        overflow: hidden;
        padding-top: 80px;
    }

    .hero-video-container {
        position: absolute;
        inset: 0;
        z-index: 0;
    }

    .hero-video {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            to bottom,
            rgba(15, 15, 15, 0.75) 0%,
            rgba(15, 15, 15, 0.85) 60%,
            rgba(15, 15, 15, 1) 100%
        );
    }

    .hero-content {
        position: relative;
        z-index: 1;
        max-width: 1000px;
    }

    .hero-logo {
        margin-bottom: 2rem;
    }

    .hero-logo img {
        height: 100px;
        width: auto;
    }

    .hero h1 {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        line-height: 1.1;
        margin-bottom: 1.5rem;
        max-width: 800px;
    }

    .hero-tagline {
        font-size: 1.25rem;
        color: #ccc;
        margin-bottom: 2rem;
        max-width: 600px;
    }

    .hero-ctas {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    /* SECTIONS */
    .section {
        padding: 5rem 0;
        border-bottom: 1px solid var(--border-color);
    }

    .section .container {
        max-width: 1000px;
    }

    .section h2 {
        font-size: 1.5rem;
        margin-bottom: 2rem;
    }

    /* WHAT SECTION */
    .what-content p {
        font-size: 1.2rem;
        color: #ccc;
        line-height: 1.7;
        max-width: 800px;
        border-left: 2px solid var(--accent-color);
        padding-left: 1.5rem;
    }

    /* WHO SECTION */
    .who-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .who-card {
        background: #161616;
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 2rem;
        transition: all 0.3s ease;
    }

    .who-card:hover {
        border-color: var(--accent-color);
        transform: translateY(-2px);
    }

    .who-icon {
        color: var(--accent-color);
        margin-bottom: 1rem;
    }

    .who-card h3 {
        font-size: 1.1rem;
        margin-bottom: 0.75rem;
        font-family: var(--font-mono);
    }

    .who-card p {
        font-size: 0.95rem;
        color: #aaa;
        line-height: 1.5;
    }

    .who-microcopy {
        font-family: var(--font-mono);
        font-size: 0.9rem;
        color: var(--text-muted);
        text-align: center;
        font-style: italic;
    }

    /* HOW SECTION */
    .how-intro {
        font-size: 1.1rem;
        color: #ccc;
        margin-bottom: 2rem;
    }

    .flywheel {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 2rem;
        padding: 2rem;
        background: #161616;
        border: 1px solid var(--border-color);
        border-radius: 12px;
    }

    .flywheel-step {
        font-family: var(--font-mono);
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--accent-color);
        padding: 0.5rem 1rem;
        background: rgba(0, 230, 118, 0.1);
        border-radius: 4px;
    }

    .flywheel-arrow {
        color: var(--text-muted);
        font-size: 1.2rem;
    }

    .how-note {
        font-size: 1rem;
        color: #aaa;
    }

    /* STACK SECTION */
    .stack-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .stack-item {
        display: flex;
        gap: 1rem;
        padding: 1.25rem 1.5rem;
        background: #161616;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        align-items: baseline;
    }

    .stack-title {
        font-family: var(--font-mono);
        font-weight: 600;
        font-size: 1rem;
        color: #fff;
        min-width: 240px;
    }

    .stack-desc {
        font-size: 0.95rem;
        color: #888;
    }

    .stack-ctas {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    /* AI SECTION */
    .ai-content p {
        font-size: 1.15rem;
        color: #ccc;
        line-height: 1.7;
        max-width: 800px;
    }

    /* PARTNERS SECTION */
    .partners-content p {
        font-size: 1.1rem;
        color: #ccc;
        line-height: 1.7;
        max-width: 800px;
        margin-bottom: 2rem;
    }

    .partners-logos {
        display: flex;
        align-items: center;
        gap: 2.5rem;
        margin-bottom: 2rem;
    }

    .partner-logo {
        height: 50px;
        width: auto;
        filter: brightness(0) invert(1);
        opacity: 0.8;
    }

    /* NEWSLETTER SECTION */
    .newsletter-section {
        border-bottom: none;
    }

    .newsletter-block {
        background: #0a0a0a;
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 4rem;
        text-align: center;
    }

    .newsletter-block h2 {
        color: var(--accent-color);
        margin-bottom: 1rem;
    }

    .newsletter-block p {
        font-size: 1.15rem;
        color: #ccc;
        margin-bottom: 2rem;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    .btn--accent {
        background: var(--accent-color);
        color: var(--bg-color);
        border-color: var(--accent-color);
    }

    .btn--accent:hover {
        background: transparent;
        color: var(--accent-color);
    }

    .btn--outline {
        background: transparent;
        color: var(--text-color);
    }

    .btn--outline:hover {
        background: var(--text-color);
        color: var(--bg-color);
    }

    /* RESPONSIVE */
    @media (max-width: 768px) {
        .hero {
            min-height: 80vh;
            padding-top: 100px;
        }

        .hero-logo img {
            height: 70px;
        }

        .flywheel {
            flex-direction: column;
            align-items: flex-start;
        }

        .flywheel-arrow {
            transform: rotate(90deg);
            align-self: center;
        }

        .stack-item {
            flex-direction: column;
            gap: 0.5rem;
        }

        .stack-title {
            min-width: auto;
        }

        .newsletter-block {
            padding: 2rem;
        }
    }
</style>
