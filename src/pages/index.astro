---
import BaseLayout from '../layouts/BaseLayout.astro';

const latestEvent = {
    day: '05',
    month: 'FEB',
    tag: 'VIRTUAL PRE-ACCELERATOR',
    tagType: 'remote',
    title: 'Founder AMA: Techstars Founder Catalyst',
    time: '3:00 PM – 4:00 PM GMT',
    location: 'Google Meet',
    description: 'Ask questions live, no filters, no sales pitch. Join the Techstars team to find out if the 10-week virtual pre-accelerator is the right fit for your startup before applications close Feb 13.',
    link: 'https://luma.com/a9e83czs'
};

const whyCards = [
    {
        icon: 'code',
        title: 'BUILDERS',
        description: 'Bring code. Leave with momentum.',
        bg: '/images/founders1.jpg'
    },
    {
        icon: 'microscope',
        title: 'RESEARCHERS',
        description: 'Bring the insight. We\'ll help you prove demand.',
        bg: '/images/founders2.jpg'
    },
    {
        icon: 'briefcase',
        title: 'DOMAIN EXPERTS',
        description: 'Bring the problem. We\'ll help you build it.',
        bg: '/images/founders3.jpg'
    }
];

const startHereCards = [
    {
        title: 'Come to an event',
        description: 'Meet founders. Learn something useful. Leave with energy.',
        cta: 'View events',
        link: '/events'
    },
    {
        title: 'Join a sprint',
        description: 'Time-boxed build sessions. Ship something real.',
        cta: 'See sprints',
        link: '/sprints'
    },
    {
        title: 'Join Founder Catalyst',
        description: '10-week virtual pre-accelerator with Techstars. Go from early idea to fundable story — no equity, global cohort.',
        cta: 'Learn more',
        link: '/programmes'
    }
];

---

<BaseLayout title="Home">
    <!-- Hero Section with Video Background -->
    <section class="hero">
        <div class="hero-video-container">
            <video
                class="hero-video"
                autoplay
                muted
                loop
                playsinline
            >
                <source src="/images/hero-techstars.mp4" type="video/mp4">
            </video>
            <div class="hero-overlay"></div>
        </div>

        <div class="container hero-content">
            <h1>BUILD HERE.<br><span class="highlight">SHIP EVERYWHERE.</span></h1>
            
            <p class="hero-tagline">
                This isn't startup tourism. It's a founder-led network for builders, researchers, and domain experts who want to move fast — with AI-native execution baked in<span class="cursor">|</span>
            </p>

            <div class="hero-ctas">
                <a href="/events" class="btn">See what's on</a>
                <a href="/#newsletter" class="btn btn--outline">Get the weekly email</a>
            </div>

            <p class="givefirst-quote">We <span class="givefirst">#GiveFirst</span> — help anyone, especially entrepreneurs, without any expectation of getting anything back.</p>
        </div>
    </section>

    <!-- Partnership Section -->
    <section class="partnership-section">
        <div class="container">
            <p class="partnership-label">Official Techstars Startup Community Partnership</p>
            <div class="partnership-logos">
                <div class="partner-logo techstars-logo">
                    <img src="/images/techstarsbelfastlogo.png" alt="Techstars Belfast">
                </div>
                <span class="logo-separator">×</span>
                <div class="partner-logo qub-logo">
                    <img src="/images/QUB-Logo.png" alt="Queen's University Belfast">
                </div>
                <span class="logo-separator">×</span>
                <div class="partner-logo ormeau-logo">
                    <img src="/images/ormeau-labs-logo.svg" alt="Ormeau Labs">
                </div>
            </div>
        </div>
    </section>

    <!-- Bill Gurley Quote -->
    <section class="quote-highlight">
        <div class="container">
            <blockquote>
                <p>"The number one way to protect your career from AI is to be the most aggressive user of AI in your field.</p>
                <p class="quote-emphasis">RUN AT IT."</p>
                <cite>— Bill Gurley</cite>
            </blockquote>
        </div>
    </section>

    <!-- Bring What You Have -->
    <section class="why-section">
        <div class="container">
            <h2>BRING WHAT YOU HAVE</h2>
            
            <div class="why-grid">
                {whyCards.map(card => (
                    <div class="why-card" style={`--bg-image: url('${card.bg}')`}>
                        <div class="why-card-bg"></div>
                        <div class="why-card-content">
                            <div class="why-icon">
                                <i data-lucide={card.icon}></i>
                            </div>
                            <h3>{card.title}</h3>
                            <p>{card.description}</p>
                        </div>
                    </div>
                ))}
            </div>

        </div>
    </section>

    <!-- Start Here Section -->
    <section class="start-here-section">
        <div class="container">
            <div class="section-header">
                <h2>CHOOSE YOUR STARTING POINT</h2>
            </div>

            <div class="start-here-grid">
                {startHereCards.map(card => (
                    <div class="start-here-card card">
                        <h3>{card.title}</h3>
                        <p>{card.description}</p>
                        <a href={card.link} class="card-link">{card.cta} →</a>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Ethos Strip -->
    <section class="ethos-strip">
        <div class="container">
            <p>We give first. We move fast. We're here to help founders win.</p>
        </div>
    </section>

    <!-- Next Up (Featured Event) -->
    <section id="events" class="events-section">
        <div class="container">
            <div class="section-header">
                <h2>NEXT UP</h2>
            </div>

            <p class="section-intro">Turn up. Bring questions. Leave clearer.</p>

            <div class="events-grid">
                <div class="event-card">
                    <div class="event-date-box">
                        <span class="day">{latestEvent.day}</span>
                        <span class="month">{latestEvent.month}</span>
                    </div>
                    <div class="event-content">
                        <div class="tag-row">
                            <span class={`tag-pill ${latestEvent.tagType}`}>{latestEvent.tag}</span>
                        </div>
                        <h3>{latestEvent.title}</h3>
                        <div class="event-info-row">
                            <div class="info-item">
                                <i data-lucide="clock"></i>
                                <span>{latestEvent.time}</span>
                            </div>
                            <div class="info-item">
                                <i data-lucide="map-pin"></i>
                                <span>{latestEvent.location}</span>
                            </div>
                        </div>
                        <p class="event-description">{latestEvent.description}</p>
                    </div>
                    <div class="event-action">
                        <a href={latestEvent.link} class="btn" target="_blank">REGISTER NOW</a>
                    </div>
                </div>
            </div>

            <div class="view-all-wrapper">
                <a href="/events" class="btn">VIEW ALL EVENTS →</a>
            </div>
        </div>
    </section>

    <!-- Newsletter Section -->
    <section id="newsletter" class="newsletter-section">
        <div class="container">
            <div class="newsletter-block">
                <h2>THE WEEKLY FOUNDER EMAIL</h2>
                <p>Coming soon, sign up to find out more.</p>
                <p class="newsletter-detail">Early access for events, sprints, programmes, and open calls.</p>
                <form name="newsletter-waitlist" method="POST" action="/thanks" data-netlify="true" netlify-honeypot="bot-field" class="newsletter-form">
                    <input type="hidden" name="form-name" value="newsletter-waitlist" />
                    <p class="hidden">
                        <label>Don’t fill this out: <input name="bot-field" /></label>
                    </p>
                    <div class="newsletter-fields">
                        <label class="sr-only" for="newsletter-name">Name</label>
                        <input id="newsletter-name" name="name" type="text" autocomplete="name" placeholder="Your name" required />
                        <label class="sr-only" for="newsletter-email">Email</label>
                        <input id="newsletter-email" name="email" type="email" autocomplete="email" placeholder="Your email" required />
                        <button type="submit" class="btn btn--accent">Join the waitlist</button>
                    </div>
                    <p class="newsletter-legal">By signing up, you agree to receive the weekly email.</p>
                </form>
            </div>
        </div>
    </section>

</BaseLayout>

<style>
    /* GIVEFIRST */
    .givefirst {
        color: var(--accent-color);
        font-weight: 700;
    }

    .givefirst-quote {
        margin-top: 2rem;
        font-size: 0.95rem;
        color: var(--text-muted);
        max-width: 600px;
    }

    /* BLINKING CURSOR */
    .cursor {
        color: var(--accent-color);
        font-weight: 400;
        animation: blink 1s step-end infinite;
    }

    @keyframes blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0; }
    }

    /* HERO SECTION */
    .hero {
        position: relative;
        min-height: 50vh;
        display: flex;
        align-items: flex-start;
        overflow: hidden;
        padding-top: 200px;
        padding-bottom: 4rem;
    }

    .hero .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .hero-video-container {
        position: absolute;
        inset: 0;
        z-index: 0;
    }

    .hero-video {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            to bottom,
            rgba(15, 15, 15, 0.75) 0%,
            rgba(15, 15, 15, 0.85) 60%,
            rgba(15, 15, 15, 1) 100%
        );
    }

    .hero-content {
        position: relative;
        z-index: 1;
        padding-top: 280px;
        width: 100%;
    }

    .hero h1 {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        line-height: 1.1;
        margin-bottom: 1.5rem;
        max-width: 800px;
    }

    .hero h1 .highlight {
        color: var(--accent-color);
    }

    .hero-tagline {
        font-size: 1.3rem;
        max-width: 600px;
        color: #ccc;
        margin-bottom: 2rem;
        line-height: 1.5;
    }

    .hero-ctas {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn--outline {
        background: transparent;
        color: var(--text-color);
    }

    .btn--outline:hover {
        background: var(--text-color);
        color: var(--bg-color);
    }

    /* PARTNERSHIP SECTION */
    .partnership-section {
        padding: 2.5rem 0;
        border-bottom: 1px solid var(--border-color);
    }

    .partnership-section .container {
        max-width: 1000px;
        text-align: center;
    }

    .partnership-label {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        color: #ddd;
        margin: 0 0 1.5rem 0;
    }

    .partnership-logos {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .logo-separator {
        color: #444;
        font-size: 1rem;
        font-weight: 300;
    }

    .partner-logo {
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0.7;
        transition: opacity 0.3s ease;
    }

    .partner-logo:hover {
        opacity: 1;
    }

    .techstars-logo img {
        height: 90px;
        width: auto;
    }

    .qub-logo img {
        height: 80px;
        width: auto;
    }

    .ormeau-logo img {
        height: 65px;
        width: auto;
        filter: brightness(0) invert(1);
    }

    /* BILL GURLEY QUOTE */
    .quote-highlight {
        padding: 4rem 0;
        background: linear-gradient(135deg, rgba(0, 230, 118, 0.08) 0%, rgba(0, 0, 0, 0) 50%);
        border-bottom: 1px solid var(--border-color);
        position: relative;
        overflow: hidden;
    }

    .quote-highlight::before {
        content: '"';
        position: absolute;
        top: -40px;
        left: 5%;
        font-size: 20rem;
        font-family: Georgia, serif;
        color: rgba(0, 230, 118, 0.06);
        line-height: 1;
        pointer-events: none;
    }

    .quote-highlight .container {
        max-width: 900px;
        position: relative;
        z-index: 1;
    }

    .quote-highlight blockquote {
        text-align: center;
        margin: 0;
        padding: 0;
    }

    .quote-highlight blockquote p {
        font-size: clamp(1.3rem, 3vw, 1.75rem);
        line-height: 1.5;
        color: #ccc;
        margin: 0 0 1rem 0;
        font-weight: 400;
    }

    .quote-highlight .quote-emphasis {
        font-family: var(--font-mono);
        font-size: clamp(2rem, 5vw, 3rem);
        font-weight: 700;
        color: var(--accent-color);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin: 1.5rem 0;
        text-shadow: 0 0 40px rgba(0, 230, 118, 0.3);
    }

    .quote-highlight cite {
        display: block;
        font-family: var(--font-mono);
        font-size: 0.9rem;
        color: #999;
        font-style: normal;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        margin-top: 1.5rem;
    }

    /* WHY FOUNDERS SHOW UP SECTION */
    .why-section {
        padding: 5rem 0;
        border-bottom: 1px solid var(--border-color);
        background: linear-gradient(to bottom, #0f0f0f 0%, #141414 100%);
    }

    .why-section .container {
        max-width: 1000px;
    }

    .why-section h2 {
        text-align: center;
        margin-bottom: 3.5rem;
        font-size: 1.25rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--text-muted);
    }

    .why-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2.5rem;
    }

    .why-card {
        position: relative;
        text-align: center;
        padding: 2.5rem 1.5rem;
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
        overflow: hidden;
        height: 350px;
        display: flex;
        align-items: flex-end;
    }

    .why-card-bg {
        position: absolute;
        inset: 0;
        background-image: var(--bg-image);
        background-size: cover;
        background-position: center;
        opacity: 0.45;
        transition: opacity 0.3s ease;
    }

    .why-card-bg::after {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(to top, rgba(15, 15, 15, 0.85) 0%, rgba(15, 15, 15, 0.5) 50%, rgba(15, 15, 15, 0.3) 100%);
    }

    .why-card-content {
        position: relative;
        z-index: 1;
        width: 100%;
    }

    .why-card p {
        margin-bottom: 0;
        min-height: 80px;
    }

    .why-card:hover {
        border-color: rgba(0, 210, 106, 0.4);
        transform: translateY(-4px);
    }

    .why-card:hover .why-card-bg {
        opacity: 0.55;
    }

    .why-icon {
        width: 56px;
        height: 56px;
        margin: 0 auto 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        background: rgba(0, 210, 106, 0.15);
        color: var(--accent-color);
    }

    .why-icon i {
        width: 28px;
        height: 28px;
    }

    .why-card h3 {
        color: #fff;
        font-size: 1.25rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 1rem;
        font-family: var(--font-mono);
    }

    .why-card p {
        color: #999;
        line-height: 1.7;
        font-size: 1rem;
    }

    /* START HERE SECTION */
    .start-here-section {
        padding: 4rem 0;
        border-bottom: 1px solid var(--border-color);
    }

    .start-here-section .container {
        max-width: 1000px;
    }

    .start-here-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
    }

    .start-here-card {
        padding: 2rem;
    }

    .start-here-card h3 {
        font-size: 1.2rem;
        margin-bottom: 0.75rem;
        font-family: var(--font-mono);
    }

    .start-here-card p {
        font-size: 0.95rem;
        color: #aaa;
        margin-bottom: 1.5rem;
        line-height: 1.5;
    }

    .card-link {
        font-family: var(--font-mono);
        font-size: 0.85rem;
        color: var(--accent-color);
        text-transform: uppercase;
        transition: opacity 0.2s ease;
    }

    .card-link:hover {
        opacity: 0.8;
    }

    /* ETHOS STRIP */
    .ethos-strip {
        padding: 3rem 0;
        background: #161616;
        border-bottom: 1px solid var(--border-color);
    }

    .ethos-strip .container {
        max-width: 1000px;
    }

    .ethos-strip p {
        font-family: var(--font-mono);
        font-size: 1.2rem;
        text-align: center;
        color: var(--accent-color);
        margin: 0;
    }

    /* EVENTS SECTION */
    .events-section {
        padding: 4rem 0;
        border-bottom: 1px solid var(--border-color);
    }

    .events-section .container {
        max-width: 1000px;
    }

    .section-header {
        margin-bottom: 1.5rem;
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 1rem;
    }

    .section-intro {
        font-size: 1.1rem;
        color: #aaa;
        margin-bottom: 2rem;
    }

    .events-grid {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .event-card {
        display: grid;
        grid-template-columns: 120px 1fr auto;
        gap: 2rem;
        background: #161616;
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 2rem;
        transition: all 0.3s ease;
        align-items: center;
    }

    .event-card:hover {
        border-color: var(--accent-color);
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(0,0,0,0.4);
        background: #1c1c1c;
    }

    .event-date-box {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: #222;
        border-radius: 8px;
        padding: 1rem;
        min-height: 100px;
        border: 1px solid #333;
    }

    .event-date-box .day {
        font-size: 2rem;
        font-weight: 800;
        color: var(--accent-color);
        line-height: 1;
        font-family: var(--font-mono);
    }

    .event-date-box .month {
        font-size: 0.75rem;
        color: var(--text-muted);
        margin-top: 0.25rem;
        letter-spacing: 0.1em;
        font-family: var(--font-mono);
        text-transform: uppercase;
    }

    .event-content {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .event-content h3 {
        font-size: 1.5rem;
        color: #fff;
        margin: 0;
        letter-spacing: -0.01em;
        font-family: var(--font-main);
        text-transform: none;
    }

    .event-info-row {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        margin-top: 0.5rem;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
        color: #aaa;
        font-family: var(--font-mono);
    }

    .info-item i {
        width: 16px;
        height: 16px;
        color: var(--accent-color);
    }

    .event-description {
        font-size: 0.95rem;
        color: var(--text-muted);
        line-height: 1.5;
        margin-top: 0.5rem;
    }

    .tag-pill {
        display: inline-flex;
        align-items: center;
        padding: 2px 10px;
        border-radius: 20px;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-family: var(--font-mono);
    }

    .tag-pill.remote { background: rgba(108, 92, 231, 0.2); color: #a29bfe; }
    .tag-pill.in-person { background: rgba(0, 210, 106, 0.1); color: #00D26A; }
    .tag-pill.partner { background: rgba(255, 255, 255, 0.1); color: #fff; border: 1px solid rgba(255,255,255,0.3); }

    .event-action .btn {
        min-width: 120px;
        text-align: center;
        border-radius: 6px;
        font-size: 0.8rem;
        padding: 12px 20px;
    }

    .view-all-wrapper {
        margin-top: 3rem;
        text-align: center;
    }

    /* NEWSLETTER SECTION */
    .newsletter-section {
        padding: 4rem 0;
        border-bottom: 1px solid var(--border-color);
    }

    .newsletter-section .container {
        max-width: 1000px;
    }

    .newsletter-block {
        background: #0a0a0a;
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 4rem;
        text-align: center;
    }

    .newsletter-block h2 {
        color: var(--accent-color);
        margin-bottom: 1rem;
    }

    .newsletter-block p {
        font-size: 1.15rem;
        color: #ccc;
        margin-bottom: 0.5rem;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    .newsletter-detail {
        font-size: 1rem !important;
        color: #888 !important;
        margin-bottom: 2rem !important;
    }

    .newsletter-form {
        margin-top: 1.5rem;
    }

    .newsletter-fields {
        display: grid;
        grid-template-columns: 1fr 1fr auto;
        gap: 0.75rem;
        align-items: center;
    }

    .newsletter-fields input {
        width: 100%;
        padding: 0.8rem 1rem;
        border-radius: 8px;
        border: 1px solid var(--border-color);
        background: #0f0f0f;
        color: #fff;
        font-size: 0.95rem;
    }

    .newsletter-fields input::placeholder {
        color: #777;
    }

    .newsletter-legal {
        margin-top: 0.8rem;
        font-size: 0.85rem;
        color: #777;
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }

    .hidden {
        display: none;
    }

    .btn--accent {
        background: var(--accent-color);
        color: var(--bg-color);
        border-color: var(--accent-color);
    }

    .btn--accent:hover {
        background: transparent;
        color: var(--accent-color);
    }

    /* RESPONSIVE */
    @media (max-width: 768px) {
        .hero-content {
            padding-top: 160px;
        }

        .hero-ctas {
            flex-direction: column;
        }

        .hero-ctas .btn {
            width: 100%;
            text-align: center;
        }

        .newsletter-fields {
            grid-template-columns: 1fr;
        }

        .partnership-logos {
            gap: 1rem;
        }

        .techstars-logo img {
            height: 70px;
        }

        .qub-logo img {
