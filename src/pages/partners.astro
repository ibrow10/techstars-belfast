---
import BaseLayout from '../layouts/BaseLayout.astro';

const whyPartner = [
    "Get close to builders early (pre-seed to seed, shipping fast)",
    "Sponsor real work (sprints, hackathons, founder sessions — not panels)",
    "Earn trust by giving first (tools, credits, time, expertise)",
    "Plug into Techstars (global network, local depth)"
];

const whatPartnersDo = [
    "Sponsor a sprint challenge (and bring experts to help, not to sell)",
    "Provide credits/tools founders can actually use",
    "Host a founder session that is practical and honest",
    "Support scholarships / travel / founder access"
];
---

<BaseLayout title="Partner with us">
    <!-- Page Header -->
    <section class="page-header">
        <div class="container">
            <h1>PARTNER WITH US</h1>
            <div class="page-intro">
                <p>We work with companies who genuinely want to help founders.<br>Not logo collectors. Not innovation theatre.</p>
                <br>
                <p>If you're building in AI, fintech, dev tools, cloud, payments — and you want to be close to what's coming next — partner with us.</p>
            </div>
        </div>
    </section>

    <!-- Why Partner -->
    <section class="why-section">
        <div class="container">
            <h2>WHY PARTNER WITH US</h2>
            <ul class="why-list">
                {whyPartner.map(item => (
                    <li>{item}</li>
                ))}
            </ul>
        </div>
    </section>

    <!-- What Partners Can Do -->
    <section class="what-section">
        <div class="container">
            <h2>WHAT PARTNERS CAN DO</h2>
            <ul class="what-list">
                {whatPartnersDo.map(item => (
                    <li>{item}</li>
                ))}
            </ul>
        </div>
    </section>

    <!-- CTA -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-block">
                <p>If this sounds like you, get in touch.<br>We'll keep it simple.</p>
                <a href="mailto:belfast@techstars.com" class="btn btn--accent">Get in touch</a>
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    /* PAGE HEADER */
    .page-header {
        padding-top: 140px;
        padding-bottom: 3rem;
        border-bottom: 1px solid var(--border-color);
    }

    .page-header .container {
        max-width: 1000px;
    }

    .page-header h1 {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        margin-bottom: 1.5rem;
    }

    .page-intro {
        font-size: 1.1rem;
        max-width: 600px;
        color: #ccc;
        border-left: 2px solid var(--accent-color);
        padding-left: 1.5rem;
    }

    .page-intro p {
        max-width: none;
    }

    /* WHY SECTION */
    .why-section {
        padding: 4rem 0;
        border-bottom: 1px solid var(--border-color);
    }

    .why-section .container {
        max-width: 1000px;
    }

    .why-section h2 {
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .why-list {
        list-style: none;
        max-width: 600px;
    }

    .why-list li {
        font-size: 1.05rem;
        color: #ccc;
        margin-bottom: 0.75rem;
        padding-left: 1.5rem;
        position: relative;
    }

    .why-list li::before {
        content: "•";
        position: absolute;
        left: 0;
        color: var(--accent-color);
    }

    /* WHAT SECTION */
    .what-section {
        padding: 4rem 0;
        border-bottom: 1px solid var(--border-color);
    }

    .what-section .container {
        max-width: 1000px;
    }

    .what-section h2 {
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .what-list {
        list-style: none;
        max-width: 600px;
    }

    .what-list li {
        font-size: 1.05rem;
        color: #ccc;
        margin-bottom: 0.75rem;
        padding-left: 1.5rem;
        position: relative;
    }

    .what-list li::before {
        content: "•";
        position: absolute;
        left: 0;
        color: var(--accent-color);
    }

    /* CTA SECTION */
    .cta-section {
        padding: 4rem 0;
    }

    .cta-section .container {
        max-width: 1000px;
    }

    .cta-block {
        background: #0a0a0a;
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 4rem;
        text-align: center;
    }

    .cta-block p {
        font-size: 1.2rem;
        color: #ccc;
        margin-bottom: 2rem;
    }

    .btn--accent {
        background: var(--accent-color);
        color: var(--bg-color);
        border-color: var(--accent-color);
    }

    .btn--accent:hover {
        background: transparent;
        color: var(--accent-color);
    }

    /* RESPONSIVE */
    @media (max-width: 768px) {
        .page-header {
            padding-top: 120px;
        }

        .cta-block {
            padding: 2rem;
        }
    }
</style>
