---
const navItems = [
    { label: 'Events', href: '/events' },
    { label: 'Programme', href: '/programmes' },
    { label: 'Sprints', href: '/sprints' },
    { label: 'About', href: '/about' },
];
---

<header class="site-header">
    <div class="container">
        <div class="header-inner">
            <a href="/" class="logo">
                <span class="logo-text">techstars<span class="logo-underscore">_</span> Belfast</span>
            </a>
            
            <nav class="main-nav" aria-label="Main navigation">
                <ul class="nav-list">
                    {navItems.map(item => (
                        <li><a href={item.href}>{item.label}</a></li>
                    ))}
                </ul>
            </nav>
            
            <a href="#newsletter" class="header-cta btn">Subscribe</a>
            
            <button class="mobile-menu-btn" aria-label="Toggle menu" aria-expanded="false">
                <i data-lucide="menu"></i>
            </button>
        </div>
    </div>
</header>

<style>
    .site-header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        padding: var(--space-md) 0;
        background: rgba(15, 15, 15, 0.9);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid var(--border-color);
    }
    
    .header-inner {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: var(--space-lg);
    }
    
    .logo {
        display: flex;
        align-items: center;
    }
    
    .logo-text {
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        font-weight: 700;
        font-size: 1.2rem;
        letter-spacing: -0.02em;
        white-space: nowrap;
    }
    
    .logo-underscore {
        color: var(--accent-color);
    }
    
    .nav-list {
        display: flex;
        list-style: none;
        gap: var(--space-lg);
    }
    
    .nav-list a {
        font-family: var(--font-mono);
        font-size: 1.1rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.02em;
        color: var(--text-color);
        transition: color var(--transition-fast);
    }
    
    .nav-list a:hover {
        color: var(--accent-color);
    }
    
    .header-cta {
        padding: 10px 20px;
        font-size: 0.8rem;
        font-family: var(--font-mono);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.02em;
        background: var(--accent-color);
        color: var(--bg-color);
        border: 1px solid var(--accent-color);
        border-radius: 4px;
        transition: all var(--transition-fast);
    }
    
    .header-cta:hover {
        background: transparent;
        color: var(--accent-color);
    }
    
    .mobile-menu-btn {
        display: none;
        background: none;
        border: none;
        color: var(--text-color);
        cursor: pointer;
        padding: var(--space-sm);
    }
    
    @media (max-width: 768px) {
        .main-nav,
        .header-cta {
            display: none;
        }
        
        .mobile-menu-btn {
            display: block;
        }
    }
</style>
