---
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
    <div class="container">
        <div class="footer-inner">
            <div class="footer-brand">
                <div class="footer-logo">
                    <img src="/images/techstarsbelfastlogo.png" alt="Techstars Belfast" class="logo-img">
                </div>
                <p class="footer-tagline">Built for founders.</p>
                
                <div class="footer-partner-logos">
                    <span class="partner-label">In partnership with</span>
                    <div class="partner-logos">
                        <img src="/images/QUB-Logo.png" alt="Queen's University Belfast" class="partner-logo">
                        <img src="/images/ormeau-labs-logo.svg" alt="Ormeau Labs" class="partner-logo">
                    </div>
                </div>
            </div>
            
            <div class="footer-links">
                <div class="footer-col">
                    <h4>Explore</h4>
                    <ul>
                        <li><a href="/events">Events</a></li>
                        <li><a href="/programmes">Programme</a></li>
                        <li><a href="/sprints">Sprints</a></li>
                        <li><a href="/about">About</a></li>
                    </ul>
                </div>
                
                <div class="footer-col">
                    <h4>Connect</h4>
                    <ul>
                        <li><a href="https://linkedin.com/company/techstars" target="_blank" rel="noopener">LinkedIn</a></li>
                        <li><a href="/partners">Partner with us</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="footer-newsletter">
            <p class="newsletter-tagline">One email a week. No spam. Just the best founder opportunities in NI.</p>
            <a href="#newsletter" class="btn btn--small">Get the weekly email</a>
        </div>
        
        <div class="footer-bottom">
            <p class="footer-copyright">TECHSTARS BELFAST × ORMEAU LABS × QUB &nbsp;•&nbsp; &copy; {currentYear} Techstars Belfast. All Rights Reserved.</p>
        </div>
    </div>
</footer>

<style>
    .site-footer {
        border-top: 1px solid var(--border-color);
        padding: var(--space-xl) 0 var(--space-lg);
        margin-top: var(--space-2xl);
    }
    
    .footer-inner {
        display: flex;
        justify-content: space-between;
        gap: var(--space-xl);
        margin-bottom: var(--space-xl);
    }
    
    .footer-logo {
        margin-bottom: var(--space-md);
    }
    
    .footer-logo .logo-img {
        height: 48px;
        width: auto;
    }
    
    .footer-tagline {
        color: var(--text-muted);
        font-size: 0.9rem;
        max-width: 300px;
    }
    
    .footer-partner-logos {
        margin-top: var(--space-lg);
    }
    
    .partner-label {
        display: block;
        font-family: var(--font-mono);
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--text-muted);
        margin-bottom: var(--space-sm);
    }
    
    .partner-logos {
        display: flex;
        align-items: center;
        gap: var(--space-lg);
    }
    
    .partner-logo {
        height: 36px;
        width: auto;
        opacity: 0.7;
        filter: brightness(0) invert(1);
        transition: opacity var(--transition-fast);
    }
    
    .partner-logo:hover {
        opacity: 1;
    }
    
    .footer-links {
        display: flex;
        gap: var(--space-xl);
    }
    
    .footer-col h4 {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--text-muted);
        margin-bottom: var(--space-md);
    }
    
    .footer-col ul {
        list-style: none;
    }
    
    .footer-col li {
        margin-bottom: var(--space-sm);
    }
    
    .footer-col a {
        color: var(--text-secondary);
        font-size: 0.9rem;
        transition: color var(--transition-fast);
    }
    
    .footer-col a:hover {
        color: var(--accent-color);
    }

    .footer-newsletter {
        border-top: 1px solid var(--border-color);
        padding: var(--space-lg) 0;
        text-align: center;
    }

    .newsletter-tagline {
        font-size: 0.95rem;
        color: var(--text-muted);
        margin-bottom: var(--space-md);
    }

    .btn--small {
        display: inline-block;
        background: var(--accent-color);
        color: var(--bg-color);
        padding: 8px 16px;
        font-family: var(--font-mono);
        font-weight: 600;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.02em;
        border: 1px solid var(--accent-color);
        border-radius: 4px;
        transition: all 0.2s ease;
    }

    .btn--small:hover {
        background: transparent;
        color: var(--accent-color);
    }
    
    .footer-bottom {
        border-top: 1px solid var(--border-color);
        padding-top: var(--space-lg);
        text-align: center;
    }
    
    .footer-copyright {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        letter-spacing: 0.02em;
        color: var(--text-muted);
    }
    
    @media (max-width: 768px) {
        .footer-inner {
            flex-direction: column;
        }
        
        .footer-links {
            gap: var(--space-lg);
        }
    }
</style>
