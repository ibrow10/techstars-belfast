---
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
    <div class="container">
        <div class="footer-inner">
            <div class="footer-brand">
                <div class="footer-logo">
                    <img src="/images/techstarsbelfastlogo.png" alt="Techstars Belfast" class="logo-img">
                </div>
                <p class="footer-tagline">Building Northern Ireland's next generation of founders.</p>
            </div>
            
            <div class="footer-links">
                <div class="footer-col">
                    <h4>Explore</h4>
                    <ul>
                        <li><a href="/events">Events</a></li>
                        <li><a href="/programmes">Programme</a></li>
                        <li><a href="/sprints">Sprints</a></li>
                        <li><a href="/about">About</a></li>
                    </ul>
                </div>
                
                <div class="footer-col">
                    <h4>Connect</h4>
                    <ul>
                        <li><a href="https://linkedin.com/company/techstars" target="_blank" rel="noopener">LinkedIn</a></li>
                        <li><a href="/partners">Partner with us</a></li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="footer-bottom">
            <p class="footer-partners">TECHSTARS BELFAST × ORMEAU LABS × QUB</p>
            <p class="footer-copyright">&copy; {currentYear} Techstars Belfast. All Rights Reserved.</p>
        </div>
    </div>
</footer>

<style>
    .site-footer {
        border-top: 1px solid var(--border-color);
        padding: var(--space-xl) 0 var(--space-lg);
        margin-top: var(--space-2xl);
    }
    
    .footer-inner {
        display: flex;
        justify-content: space-between;
        gap: var(--space-xl);
        margin-bottom: var(--space-xl);
    }
    
    .footer-logo {
        margin-bottom: var(--space-md);
    }
    
    .footer-logo .logo-img {
        height: 48px;
        width: auto;
    }
    
    .footer-tagline {
        color: var(--text-muted);
        font-size: 0.9rem;
        max-width: 300px;
    }
    
    .footer-links {
        display: flex;
        gap: var(--space-xl);
    }
    
    .footer-col h4 {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--text-muted);
        margin-bottom: var(--space-md);
    }
    
    .footer-col ul {
        list-style: none;
    }
    
    .footer-col li {
        margin-bottom: var(--space-sm);
    }
    
    .footer-col a {
        color: var(--text-secondary);
        font-size: 0.9rem;
        transition: color var(--transition-fast);
    }
    
    .footer-col a:hover {
        color: var(--accent-color);
    }
    
    .footer-bottom {
        border-top: 1px solid var(--border-color);
        padding-top: var(--space-lg);
        text-align: center;
    }
    
    .footer-partners {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        letter-spacing: 0.05em;
        color: var(--text-muted);
        margin-bottom: var(--space-sm);
    }
    
    .footer-copyright {
        font-size: 0.8rem;
        color: var(--text-muted);
    }
    
    @media (max-width: 768px) {
        .footer-inner {
            flex-direction: column;
        }
        
        .footer-links {
            gap: var(--space-lg);
        }
    }
</style>
